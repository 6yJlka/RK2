<!-- app/views/array_manipulation/index.html.erb -->

<h1>Array Manipulation</h1>

<%= form_with url: root_path, method: :get do |form| %>
  <label for="arr_r">Enter an array of numbers (comma-separated):</label>
  <%= form.text_field :arr_r, id: 'arr_r' %>
  <%= form.submit 'Submit' %>
<% end %>

<% if @result.present? %>
  <p>Array: <%= @result[:arr_r] %></p>
  <p>Selected Elements: <%= @result[:selected_elements] %></p>
  <p>Product of Selected Elements: <%= @result[:product] %></p>
  <p>First Even Element: <%= @result[:first_even_element] %></p>
<% end %>
